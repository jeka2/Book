<div class="update-user-description-form">
	<%= form_for user, url: description_path(user.id), method: :patch do |f| %>
		<%= "What's something interseting about yourself?" %><br>
		<%= f.text_area :description, placeholder: user.description %>
		<%= f.hidden_field(:updated, :value => true) %>
		<%= f.submit "Update the Descrition" %>
	<% end %>
</div>